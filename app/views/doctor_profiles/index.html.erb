<div class="row">
  <div class="small-4 columns">
    <h2>Find A Doctor</h2>
  </div>
</div>

<div class="row">
  <div class="small-4 columns">
    <p><%= select_tag "Filter By Availability", prompt:"Filter By Availabity" %></p>
  </div>
</div>

<div class="row">
  <div class="small-8 columns">
    <table>
      <tr>
        <th>Name</th>
        <th>Bio</th>
        <th>Photo</th>
        <th>Specialty</th>
        <th>Location</th>
        <th>Email</th>
        <th>Schedule</th>
        <th>Delete</th>
      </tr>
      <% @doctor_profiles.each do |doctor_profile| %>
      <tr>
        <td>Dr. <%= doctor_profile.last_name %></td>
        <td><%= link_to "Bio", doctor_profile_path(doctor_profile) %></td>
        <td><%= doctor_profile.avatar %></td>
        <td>Specialty</td>
        <td><%= doctor_profile.address %></td>
        <td><%= link_to doctor_profile.email %></td>
        <td>Choose a Time</td>
        <td><%= link_to "Delete", doctor_profile_path(doctor_profile), method: :delete %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
<div class="row">
  <div class="small-4 columns">
    <%= link_to "Back", patient_root_path %>
  </div>
</div>
